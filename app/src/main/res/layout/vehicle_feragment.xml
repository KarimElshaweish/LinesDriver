<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:padding="35dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/avrl"
            android:layout_width="170dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/back"
            android:layout_marginTop="20dp"
            android:layout_height="170dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/avatar"
               />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="70dp"
                android:layout_alignParentBottom="true"
                android:layout_height="70dp"
                app:borderWidth="3dp"
                android:padding="15dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/camera_ic"
                app:backgroundTint="#fff"
                android:id="@+id/changePic"
                android:layout_alignParentRight="true"
                android:backgroundTint="#fff"/>
        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_below="@id/avrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:drawableLeft="@drawable/start"
                android:drawablePadding="7dp"

                android:layout_below="@id/avatar"
                android:fontFamily="@font/nunito_req"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffdb77"
                android:lineSpacingExtra="8.3sp"
                android:gravity="center"
                android:text="Recommende by Star School"
                />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:fontFamily="@font/nunito_bold"
                android:id="@+id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.8sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                app:custom_color="@color/line_colors"
                app:height_weight="0.8"
                app:use_gradient="true"
                />
            <TextView
                android:fontFamily="@font/nunito_bold"
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15.3sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                android:text="N/A"
                />
            <TextView
                android:fontFamily="@font/nunito_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#a7a7a7"
                android:lineSpacingExtra="8.3sp"
                android:gravity="center_horizontal"
                android:text="rate"
                />

            <TextView
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.8sp"
                android:textColor="#000000"
                android:lineSpacingExtra="2.5sp"
                android:gravity="center_horizontal"
                android:text="Vehicle info"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/nunito_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#b7b7b7"
                    android:lineSpacingExtra="8.3sp"
                    android:gravity="center_horizontal"
                    android:text="Vehicle number : "
                    />
                <EditText
                    android:enabled="false"
                    android:fontFamily="@font/nunito_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:lineSpacingExtra="8.3sp"
                    android:gravity="center_horizontal"
                    android:text="SAB 235"
                    android:id="@+id/licencesNumber"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pc1"
                        android:layout_margin="7dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/bus"/>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/add1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:src="#fff"></de.hdodenhof.circleimageview.CircleImageView>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/add_ic"/>
                    </RelativeLayout>

                </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="7dp"
        android:id="@+id/pc2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bus"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/add2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="#fff"></de.hdodenhof.circleimageview.CircleImageView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/add_ic"/>
    </RelativeLayout>

</RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="7dp"
                        android:id="@+id/pc3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/bus"/>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/add3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:src="#fff"></de.hdodenhof.circleimageview.CircleImageView>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/add_ic"/>
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.8sp"
                android:textColor="#000000"
                android:lineSpacingExtra="2.5sp"
                android:gravity="center_horizontal"
                android:text="Students Info"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/nunito_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#b7b7b7"
                    android:lineSpacingExtra="8.3sp"
                    android:gravity="center_horizontal"
                    android:text="from star school :"
                    />
                <TextView
                    android:fontFamily="@font/nunito_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:lineSpacingExtra="8.3sp"
                    android:gravity="center_horizontal"
                    android:text=" 235 students"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/nunito_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#b7b7b7"
                    android:lineSpacingExtra="8.3sp"
                    android:gravity="center_horizontal"
                    android:text="other schools : "
                    />
                <TextView
                    android:fontFamily="@font/nunito_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:lineSpacingExtra="8.3sp"
                    android:gravity="center_horizontal"
                    android:text=" 35 students"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/nunito_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:lineSpacingExtra="8.3sp"
                    android:gravity="center_horizontal"
                    android:text="Reviews &amp; Rate   "
                    />
                <TextView
                    android:fontFamily="@font/nunito_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#d7d7d7"
                    android:lineSpacingExtra="8.3sp"
                    android:gravity="center_horizontal"
                    android:text=" (320)"
                    />


            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp">
                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RatingBar
                        android:theme="@style/RatingBar"
                        android:rating="3.5"
                        android:id="@+id/rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:fontFamily="@font/nunito_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.7sp"
                        android:textColor="#000000"
                        android:lineSpacingExtra="3.7sp"
                        android:text="Mohammed Ahmed"
                        />
                    <TextView
                        android:fontFamily="@font/nunito_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.7sp"
                        android:textColor="#d7d7d7"
                        android:lineSpacingExtra="3.7sp"
                        android:text="Great Driver , good timing
"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/updateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:background="@drawable/button"
                android:textColor="#fff"
                android:fontFamily="@font/nunito_bold"/>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>