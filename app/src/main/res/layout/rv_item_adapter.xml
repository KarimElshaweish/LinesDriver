<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:id="@+id/cv"
    android:layout_height="98.7dp">
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="58.7dp"
            android:layout_height="58.7dp"
            android:src="@drawable/avatar"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"/>
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/nunito_req"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.3sp"
                android:textColor="#626262"
                android:lineSpacingExtra="7sp"
                android:text="Tab to veiw all information"
                />

            <RatingBar
                android:theme="@style/RatingBar"
                android:rating="3.5"
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/nunito_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6.7sp"
                android:textColor="#adadad"
                android:lineSpacingExtra="8.7sp"
                android:text="By 357 user"
                />
            <TextView
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.7sp"
                android:textColor="#000"
                android:lineSpacingExtra="8.7sp"
                android:text="Adam Mick"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6.7sp"
                android:textColor="#adadad"
                android:lineSpacingExtra="3.7sp"
                android:text="
SAB 235 Suberbus
"
                /> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6.7sp"
            android:textColor="#adadad"
            android:lineSpacingExtra="3.7sp"
            android:text="
230 register student (200 from star school)
"
            />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>